{
  "name": "sacred-heart",
  "version": "1.0.0",
  "description": "Sacred Heart - Full Stack Game",
  "homepage": "https://github.com/KaimsoftAU/Sacred-Heart#readme",
  "bugs": {
    "url": "https://github.com/KaimsoftAU/Sacred-Heart/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KaimsoftAU/Sacred-Heart.git"
  },
  "license": "ISC",
  "author": "Kyle McCarthy",
  "scripts": {
    "dev": "concurrently -n \"SERVER,CLIENT\" -c \"bgBlue,bgMagenta\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
